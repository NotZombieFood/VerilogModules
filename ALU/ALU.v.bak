module ALU(
	 input [5:0] a,
    input [5:0] b,
    input [3:0] ctrl,
	 input rst,
	 input clk,
    output zero,
    output reg [12:0] result
    );
	 
	wire [12:0] multiplicacion;
	wire [5:0 ] division;
	
	Divisor d1(
	.A(a),
	.B(b),
	.clk(clk),
	.rst(rst),
	.Cociente(division)
	);
	
	Multiplicador m1(
	.A(a),
	.B(b),
	.rst(rst),
	.clk(clk),
	.c(multiplicacion)
	);

	always @ * begin
		case (ctrl)
			4'b0000: result = a & b;
			4'b0001: result = a | b;
			4'b0010: result = a + b;
			4'b0110: result = a - b;
			4'b0111: result = a << 1;
			4'b1100: result = a >> 1;
			4'b1101: result = multiplicacion;
			4'b1110: result = division;
			4'b1111: result = ~a;
			default: result = 0;
		endcase
	end
	
		assign zero = (result == 0);



endmodule
